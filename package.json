{
	"name": "external-permalink",
	"scripts": {
		"start": "wp-env start",
		"update": "wp-env start --update",
		"stop": "wp-env stop",
		"cli": "wp-env run cli wp",
		"cli:test": "wp-env run tests-cli wp",
		"package": "npm run build:js && npm run dump",
		"dump": "grab-deps dump dist",
		"build:js": "grab-deps js assets/js dist/js js",
		"build:css": "sass ./assets/scss/:./dist/css/ --style=compressed && postcss ./dist/css/**/*.css --replace",
		"lint": "npm run lint:css && npm run lint:js",
		"lint:js": "wp-scripts lint-js 'assets/js/**/*.js'",
		"lint:css": "wp-scripts lint-style 'assets/**/*.scss'",
		"fix:js": "eslint --fix assets/js",
		"fix:css": "stylelint --fix 'assets/scss/**/*.scss'",
		"watch": "npm-watch"
	},
	"author": "Tarosky inc.",
	"license": "GPL-3.0-or-later",
	"devDependencies": {
		"@kunoichi/grab-deps": "^3.1.4",
		"@wordpress/scripts": "^31.1.0",
		"@wordpress/env": "^10.0.0",
		"npm-watch": "^0.13.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"sass": "^1.97.0"
	},
	"dependencies": {},
	"engines": {
		"node": ">=20"
	},
	"volta": {
		"node": "20.19.6"
	},
	"watch": {
		"build:js": {
			"extensions": "js",
			"patterns": [
				"assets/js"
			]
		},
		"dump": {
			"extensions": "js,css",
			"patterns": [
				"dist/js",
				"dist/css"
			]
		}
	}
}
